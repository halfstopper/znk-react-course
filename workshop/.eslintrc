{
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "rules": {
    "react/jsx-filename-extension": "off", // The component files generated by `create-react-app` have a `.js` extension
    "react/prefer-stateless-function": "off" // TODO Remove when speaking about defining component like that.
  },
  "overrides": [
    {
      "files": [ "**/__tests__/*.js", "**/__mocks__/*.js" ],
      "env": {
        "jest": true
      },
      "rules": {
        "react/no-find-dom-node": "off" // TODO Remove when using only the shallow rendering in tests
      }
    },
    {
      "files": [ "**/tp1/src/*.js" ],
      "rules": {
        "react/prop-types": "off" // PropTypes are introduced at Lab 2
      }
    },
    {
      "files": [ "**/app-store.js" ],
      "rules": {
        "no-underscore-dangle": ["error", {"allow": ["__REDUX_DEVTOOLS_EXTENSION__"]}] // Necessary for the Redux devtools
      }
    },
    {
      "files": [ "**/server/*.js" ],
      "rules": {
        "no-console": ["error", {"allow": ["info", "warn", "error"]}] // Use of console for logging on server-side is fine
      }
    }
  ]
}
